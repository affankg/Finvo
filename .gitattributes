# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts must have LF line endings
*.sh text eol=lf

# Python files
*.py text eol=lf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.ini text eol=lf
*.conf text eol=lf

# Windows specific
*.bat text eol=crlf
*.cmd text eol=crlf
